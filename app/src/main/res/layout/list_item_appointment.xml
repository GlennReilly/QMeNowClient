<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:layout_marginTop="3dp">
        <ImageView
            android:id="@+id/appointment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/appointment_light"/>

        <TextView
            android:id="@+id/tvAppointmentRefNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f3f3f3"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:paddingTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <!--android:layout_below="@id/appointment_image"-->

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/tvAppointmentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="@dimen/general_text_size"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/tvAppointmentLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/general_text_size"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120dp"
                />

            <TextView
                android:id="@+id/tvAppointmentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/general_text_size"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvAppointmentRefNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/tvAppointmentStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/general_text_size"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120dp"
                />

            <TextView
                android:id="@+id/tvAppointmentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="@dimen/general_text_size"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>